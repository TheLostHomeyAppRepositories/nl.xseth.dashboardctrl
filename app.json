{
  "id": "nl.xseth.dashboardctrl",
  "sdk": 2,
  "name": {
    "en": "Dashboard Controller",
    "nl": "Dashboard Controller"
  },
  "tags": {
    "en": [ "webcam", "android" ],
    "nl": [ "webcam", "android" ]
  },
  "version": "0.1.0",
  "compatibility": ">=3.0.0",
  "author": {
    "name": "Roy K",
    "website": "https://github.com/rkokkelk/nl.xseth.dashboardctrl"
  },
  "bugs": {
    "url": "https://github.com/rkokkelk/nl.xseth.dashboardctrl/issues"
  },
  "homeyCommunityTopicId": 0,
  "source": "https://github.com/rkokkelk/nl.xseth.dashboardctrl",
  "homepage": "https://community.athom.com/t/0",
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "category": "tools",
  "description": {
    "en": "Control your Android dashboards using Homey",
    "nl": "Bedien je Android dashboards via Homey"
  },
  "dependencies": {
    "net": "*"
  },
  "drivers": [
    {
      "id": "fully_browser",
      "name": {
        "en": "Fully Browser on Android",
        "nl": "Fully Browser op Android"
      },
      "images": {
        "large": "drivers/fully_browser/assets/images/large.jpg",
        "small": "drivers/fully_browser/assets/images/small.jpg"
      },
      "class": "other",
      "capabilities": [
        "onoff",
        "dim",
        "measure_battery",
        "alarm_motion"
      ],
      "energy": {
        "batteries": ["INTERNAL"]
      },
      "pair": [
        {
          "id": "start"
        }
      ],
      "mobile": {
        "components": [
          {
            "id": "battery",
            "capabilities": ["measure_battery"]
          },
          {
            "id": "icon"
          },
          {
            "id": "sensor",
            "capabilities": ["alarm_motion"]
          },
          {
            "id": "sensor",
            "capabilities": ["alarm_generic"]
          },
          {
            "id": "sensor",
            "capabilities": ["measure_luminance"]
          }
        ]
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Fully Browser settings",
            "nl": "Fully Browser instellingen"
          },
          "children": [
            {
              "id": "address",
              "type": "text",
              "value": "http://192.168.1.1:2323",
              "label": {
                "en": "IP Address",
                "nl": "IP adres"
              }
            },
            {
              "id": "password",
              "type": "password",
              "value": "",
              "label": {
                "en": "Password",
                "nl": "Wachtwoord"
              }
            },
            {
              "id": "polling",
              "type": "number",
              "value": 15,
              "step": 1,
              "attr": {
                "min": 5,
                "max": 3600
              },
              "label": {
                "en": "Polling",
                "nl": "Polling"
              }
            }
          ]
        }
      ]
    }
  ],
  "flow": {
    "actions": [
      {
        "id": "dashboard",
        "title": {
          "en": "Email live snapshot",
          "nl": "Email live snapshot"
        },
        "hint": {
          "en": "Take a snapshot and send it with email (make sure email is configured in the app settings).",
          "nl": "Maak een  snapshot en verstuur deze per email (zorg ervoor dat email is geconfigureerd in de app instellingen)."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select Fully Browser",
              "nl": "Selecteer Fully Browser"
            },
            "filter": "driver_id=fully_browser"
          }
        ]
      }
    ]
  }
}
